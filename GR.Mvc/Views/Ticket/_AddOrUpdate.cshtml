@using GR.Mvc.ViewModel
@model TicketViewModel

@{
    ViewBag.Title = "";
    Layout = null;
}

<form asp-controller="Ticket" asp-action="AddOrUpdate" method="post">
    <div class="row">
        <div class="form-group">
            <label asp-for="Ticket.EventName"></label>
            <input asp-for="Ticket.EventName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Ticket.Price"></label>
            <input asp-for="Ticket.Price" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Ticket.Discount"></label>
            <input asp-for="Ticket.Discount" class="form-control" />
        </div>
        <button type="submit" class="btn">Save</button>
        <input type="hidden" asp-for="Ticket.IdString" />
        <input type="hidden" asp-for="Ticket.Version" />
    </div>
</form>


